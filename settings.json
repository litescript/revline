{
  // --- Python (backend) ---
  // If you create a local venv at ./api/.venv, VS Code will use it:
  "python.defaultInterpreterPath": "${workspaceFolder}/api/.venv/bin/python",
  // Help Pylance resolve app imports and stop missing-import spam when using Docker
  "python.analysis.extraPaths": ["${workspaceFolder}/api/app"],
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "none"
  },
  "python.analysis.typeCheckingMode": "off",
  "python.linting.enabled": false,

  // --- TypeScript/JS (frontend) ---
  // Use the workspace TypeScript so versions match your project
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  // Vite/TS intellisense for import.meta.env
  "files.associations": {
    "vite.config.ts": "typescript"
  },

  // --- Editor niceties ---
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true,
    "**/.vite-cache": true,
    "**/__pycache__": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // --- Tailwind v4 (optional, safe even if extension not installed) ---
  "tailwindCSS.experimental.configFile": null,
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html",
    "typescript": "html"
  }
}
