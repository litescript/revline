# Database
POSTGRES_USER=revline
POSTGRES_PASSWORD=revline
POSTGRES_DB=revline
DATABASE_URL=postgresql+psycopg2://revline:revline@db:5432/revline

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET=CHANGE_ME
API_DEBUG=1

# JWT Security
JWT_SECRET=CHANGE_ME
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=15

# JWT Validation (required in production)
JWT_ISSUER=revline-api
JWT_AUDIENCE=revline-frontend

# Refresh Tokens
REFRESH_TOKEN_EXPIRE_DAYS=7
REFRESH_THRESHOLD_MINUTES=5
AUTH_REFRESH_STRATEGY=nuclear

# Auth Mode
AUTH_COOKIE_MODE=true

# Cookies
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax

# CORS (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Redis
REDIS_URL=redis://redis:6379/0

# Rate Limiting
AUTH_RATE_LIMIT_TIMES=5
AUTH_RATE_LIMIT_SECONDS=60
REFRESH_IP_RATE_LIMIT_TIMES=60
REFRESH_USER_RATE_LIMIT_TIMES=10
REFRESH_RATE_LIMIT_SECONDS=60

# Environment (development, staging, production)
ENV=development

# Frontend
VITE_API_BASE=http://localhost:8000/api/v1
VITE_REFRESH_THRESHOLD_MINUTES=5
